<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewLabelFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/label_name"
            app:layout_constraintStart_toEndOf="@id/imageViewEmployee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewLName"/>

        <TextView
            android:id="@+id/textViewLabelLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/label_last_name"
            app:layout_constraintStart_toEndOf="@id/imageViewEmployee"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelFName"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textViewFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/textViewLabelFName"
            app:layout_constraintTop_toTopOf="@id/textViewLabelFName"
            app:layout_constraintBottom_toBottomOf="@id/textViewLabelFName"/>

        <TextView
            android:id="@+id/textViewLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/textViewLabelLName"
            app:layout_constraintTop_toTopOf="@id/textViewLabelLName"
            app:layout_constraintBottom_toBottomOf="@id/textViewLabelLName"/>

        <ImageView
            android:id="@+id/imageViewEmployee"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>